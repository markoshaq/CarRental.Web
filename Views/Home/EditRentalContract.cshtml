@model CarRental.Web.Models.RentalContract
@{
    ViewData["Title"] = "Edit Rental Contract";
}

<div class="text-start">
    <h1 class="display-4 mb-3">Edit Rental Contract</h1>
</div>

<form asp-action="SaveRentalContract" asp-controller="Home">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="IsUpdate" value="true" />
    <div class="form-group row">

        <label for="Customer ID" class="col-sm-2 col-form-label mt-2">Customer ID</label>
        <div class="col-sm-10">
            <input asp-for="CustomerId" type="number" class="form-control" id="CustomerId" placeholder="Enter customer id" required>
        </div>

        <label for="Vehicle ID" class="col-sm-2 col-form-label mt-2">Vehicle ID</label>
        <div class="col-sm-10">
            <input asp-for="VehicleId" type="number" class="form-control" id="VehicleId" placeholder="Enter vehicle id" required>
        </div>

        <label for="Date" class="col-sm-2 col-form-label mt-2">End of contract</label>
        <div class="col-sm-10">
            <input asp-for="Date" type="date" class="form-control" id="Date" placeholder="Enter date" required>
        </div>

        <label for="Mileage" class="col-sm-2 col-form-label mt-2">Vehicle mileage</label>
        <div class="col-sm-10">
            <input asp-for="Mileage" type="number" class="form-control" id="Mileage" placeholder="Enter current vehicle mileage">
        </div>

        <label for="Status" class="col-sm-2 col-form-label mt-2">Status</label>
        <div class="col-sm-10">
            <input asp-for="Status" class="form-control" id="Status" placeholder="Enter current status" required>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </div>
</form>