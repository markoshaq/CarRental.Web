@model CarRental.Web.Models.RentalContract
@{
    ViewData["Title"] = "Add Rental Contract";
}

<div class="text-center">
    <h1 class="display-4">Create a new rental contract</h1>
</div>

<form>
    <div class="form-group row ms-5 me-5">

        <label for="Customer ID" class="col-sm-2 col-form-label mt-2">Customer ID</label>
        <div class="col-sm-10">
            <input asp-for="CustomerId" class="form-control" id="CustomerId" placeholder="Enter customer id">
        </div>

        <label for="Vehicle ID" class="col-sm-2 col-form-label mt-2">Vehicle ID</label>
        <div class="col-sm-10">
            <input asp-for="VehicleId" class="form-control" id="VehicleId" placeholder="Enter vehicle id">
        </div>

        <label for="Date" class="col-sm-2 col-form-label mt-2">End of contract</label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" id="Date" placeholder="Enter date">
        </div>

        <label for="Mileage" class="col-sm-2 col-form-label mt-2">Vehicle mileage</label>
        <div class="col-sm-10">
            <input asp-for="Mileage" class="form-control" id="Mileage" placeholder="Enter current vehicle mileage">
        </div>

        <label for="Status" class="col-sm-2 col-form-label mt-2">Status</label>
        <div class="col-sm-10">
            <input asp-for="Status" class="form-control" id="Status" placeholder="Enter current status">
        </div>
    </div>
    <button type="submit" class="btn btn-primary ms-5 mt-3">Submit</button>
</form>