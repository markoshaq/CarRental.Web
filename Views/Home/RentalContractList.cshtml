@{
    ViewData["Title"] = "Rental Contracts";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-4 mb-0">Rental Contracts</h1>
    <a asp-controller="Home" asp-action="AddRentalContract" class="btn btn-primary mt-4">New Rental Contract</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Customer ID</th>
            <th>Vehicle ID</th>
            <th>Date</th>
            <th>Mileage</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rentalContract in Model)
        {
            <tr>
                <td>@rentalContract.CustomerId</td>
                <td>@rentalContract.VehicleId</td>
                <td>@rentalContract.Date</td>
                <td>@rentalContract.Mileage</td>
                <td>@rentalContract.Status</td>
            </tr>
        }
    </tbody>
</table>
