@{
    ViewData["Title"] = "Rental Contracts";
}

<div class="d-flex justify-content-between mb-3">
    <h1 class="display-4 mb-0">Rental Contracts</h1>
    <div>
        <a asp-controller="Home" asp-action="AddRentalContract" class="btn btn-primary mt-4">New Contract</a>
    </div>
</div>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Customer ID</th>
            <th>Vehicle ID</th>
            <th>Date</th>
            <th>Mileage</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rentalContract in Model)
        {
            <tr>
                <td>@rentalContract.Id</td>
                <td>@rentalContract.CustomerId</td>
                <td>@rentalContract.VehicleId</td>
                <td>@rentalContract.Date</td>
                <td>@rentalContract.Mileage</td>
                <td>@rentalContract.Status</td>
                <td>
                    <form asp-action="EditRentalContract" method="get" style="display:inline;">
                        <input type="hidden" name="id" value="@rentalContract.Id" />
                        <button type="submit" class="btn btn-secondary btn-sm">Edit</button>
                    </form>
                    <form asp-action="DeleteRentalContract" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@rentalContract.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
