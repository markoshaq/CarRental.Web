@model CarRental.Web.Models.Customer
@{
    ViewData["Title"] = "Add Customer";
}

<div class="text-center">
    <h1 class="display-4">Add a new customer</h1>
</div>

<form>
    <div class="form-group row ms-5 me-5">

        <label for="FirstName" class="col-sm-2 col-form-label mt-2">First name</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="Enter first name">
        </div>

        <label for="LastName" class="col-sm-2 col-form-label mt-2">Last name</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" id="LastName" placeholder="Enter last name">
        </div>

        <label for="Salutation" class="col-sm-2 col-form-label mt-2">Salutation</label>
        <div class="col-sm-10">
            <input asp-for="Salutation" class="form-control" id="Salutation" placeholder="Enter salutation">
        </div>

        <label for="Street" class="col-sm-2 col-form-label mt-2">Street</label>
        <div class="col-sm-10">
            <input asp-for="Street" class="form-control" id="Street" placeholder="Enter street">
        </div>

        <label for="Zipcode" class="col-sm-2 col-form-label mt-2">Zip Code</label>
        <div class="col-sm-10">
            <input asp-for="ZipCode" class="form-control" id="Zipcode" placeholder="Enter zipcode">
        </div>

        <label for="City" class="col-sm-2 col-form-label mt-2">City</label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" id="City" placeholder="Enter city">
        </div>

        <label for="Country" class="col-sm-2 col-form-label mt-2">Country</label>
        <div class="col-sm-10">
            <input asp-for="Country" class="form-control" id="Country" placeholder="Enter country">
        </div>

        <label for="Phone" class="col-sm-2 col-form-label mt-2">Phone</label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" id="Phone" placeholder="Enter phone">
        </div>

        <label for="EMail" class="col-sm-2 col-form-label mt-2">E-Mail</label>
        <div class="col-sm-10">
            <input asp-for="EMail" class="form-control" id="EMail" placeholder="Enter E-Mail">
        </div>

    </div>
    <button type="submit" class="btn btn-primary ms-5 mt-3">Submit</button>
</form>