@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between mb-3">
    <h1 class="display-4 mb-0">Customers</h1>
    <div>
        <a asp-controller="Home" asp-action="AddCustomer" class="btn btn-primary mt-4">New Customer</a>
    </div>
</div>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Salutation</th>
            <th>Street</th>
            <th>Zip Code</th>
            <th>City</th>
            <th>Country</th>
            <th>Phone</th>
            <th>EMail</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Salutation</td>
                <td>@customer.Street</td>
                <td>@customer.ZipCode</td>
                <td>@customer.City</td>
                <td>@customer.Country</td>
                <td>@customer.Phone</td>
                <td>@customer.EMail</td>
                <td>
                    <form asp-action="EditCustomer" method="get" style="display:inline;">
                        <input type="hidden" name="id" value="@customer.Id" />
                        <button type="submit" class="btn btn-secondary btn-sm">Edit</button>
                    </form>
                    <form asp-action="DeleteCustomer" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@customer.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>